---
import FunnelLayout from '@layouts/FunnelLayout.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import { getContent } from '@content/content';

const lang = 'en';
const content = getContent(lang);
const canonical = 'https://awanar-expeditions.com/thank-you';
---

<FunnelLayout 
  title={`Thank You | ${content.meta.siteName}`}
  description="Thank you for your application. Next steps for the Amazon expedition."
  canonical={canonical}
  lang={lang}
  content={content}
  showMinimalNav={false}
>
  <section class="section-padding pt-24 pb-16 min-h-[60vh] flex items-center">
    <div class="container-narrow">
      <div class="text-center mb-12">
        <div class="w-16 h-16 rounded-full bg-aw-sage/20 flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-aw-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h1 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.thankYou.title}</h1>
      </div>

      <div class="space-y-4 mb-12">
        {content.thankYou.steps.map((step) => (
          <Card padding="md">
            <p class="font-semibold text-aw-base mb-1">{step.title}</p>
            <p class="text-aw-base/70 text-sm">{step.description}</p>
          </Card>
        ))}
      </div>

      <!-- Contact cards -->
      <div class="grid sm:grid-cols-3 gap-4 mb-12">
        <a 
          href={`https://instagram.com/${content.meta.instagram.replace('@', '')}`}
          target="_blank"
          rel="noopener"
          class="p-4 bg-white/50 rounded-lg border border-aw-sage/20 text-center hover:bg-white/80 transition-colors"
        >
          <svg class="w-6 h-6 mx-auto mb-2 text-aw-sage" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          <p class="text-sm font-medium text-aw-base">{content.meta.instagram}</p>
        </a>

        <a 
          href={`mailto:${content.meta.email}`}
          class="p-4 bg-white/50 rounded-lg border border-aw-sage/20 text-center hover:bg-white/80 transition-colors"
        >
          <svg class="w-6 h-6 mx-auto mb-2 text-aw-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <p class="text-sm font-medium text-aw-base">Email us</p>
        </a>

        <a 
          href="/"
          class="p-4 bg-white/50 rounded-lg border border-aw-sage/20 text-center hover:bg-white/80 transition-colors"
        >
          <svg class="w-6 h-6 mx-auto mb-2 text-aw-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
          </svg>
          <p class="text-sm font-medium text-aw-base">{content.meta.domain}</p>
        </a>
      </div>

      <div class="text-center">
        <Button href="/call" variant="primary" size="lg">
          Book your call now
        </Button>
      </div>
    </div>
  </section>
</FunnelLayout>
