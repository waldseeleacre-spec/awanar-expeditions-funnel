---
import FunnelLayout from '@layouts/FunnelLayout.astro';
import FAQAccordion from '@components/sections/FAQAccordion.astro';
import Button from '@components/ui/Button.astro';
import { getContent } from '@content/content';

const lang = 'de';
const content = getContent(lang);
const canonical = 'https://awanar-expeditions.com/de/faq';
---

<FunnelLayout 
  title={`FAQ | ${content.meta.siteName}`}
  description="Häufig gestellte Fragen zur Amazonas-Expedition. Sprachunterstützung, Packliste, Zahlung, Flüge, Buchungsprozess und Zeremonien."
  canonical={canonical}
  lang={lang}
  content={content}
>
  <section class="section-padding pt-24 pb-16">
    <div class="container-narrow text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.faq.title}</h1>
      <p class="text-lg text-aw-sage">Alles, was du wissen musst.</p>
    </div>
  </section>

  <FAQAccordion content={content.faq} />

  <!-- Still have questions -->
  <section class="section-padding py-16 bg-aw-base/5">
    <div class="container-narrow text-center">
      <h2 class="text-2xl font-bold text-aw-base mb-4">Noch Fragen?</h2>
      <p class="text-aw-sage mb-8">Buche einen kostenlosen Abstimmungsanruf. Ohne Verpflichtung.</p>
      <Button href="/de/call" variant="primary" size="lg">
        Anruf buchen
      </Button>
    </div>
  </section>
</FunnelLayout>
