---
import FunnelLayout from '@layouts/FunnelLayout.astro';
import TypeformEmbed from '@components/conversion/TypeformEmbed.astro';
import { getContent } from '@content/content';

const lang = 'de';
const content = getContent(lang);
const canonical = 'https://awanar-expeditions.com/de/apply';
---

<FunnelLayout 
  title={`Bewerben | ${content.meta.siteName}`}
  description="Bewirb dich für die Amazonas-Expedition im September 2026. Begrenzte Plätze verfügbar."
  canonical={canonical}
  lang={lang}
  content={content}
>
  <section class="section-padding pt-24 pb-16">
    <div class="container-narrow text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.apply.title}</h1>
      <p class="text-lg text-aw-sage mb-12">{content.apply.subtitle}</p>
    </div>
  </section>

  <section class="section-padding pb-16">
    <div class="container-narrow">
      <TypeformEmbed height="700px" />
    </div>
  </section>

  <!-- Alternative contact -->
  <section class="section-padding py-12 bg-aw-base/5">
    <div class="container-narrow text-center">
      <p class="text-aw-sage mb-4">Möchtest du erst sprechen?</p>
      <a 
        href="/de/call" 
        class="inline-flex items-center justify-center px-6 py-3 border-2 border-aw-base text-aw-base rounded-lg font-medium hover:bg-aw-base hover:text-aw-sand transition-colors"
      >
        Stattdessen Anruf buchen
      </a>
    </div>
  </section>
</FunnelLayout>
