---
import FunnelLayout from '@layouts/FunnelLayout.astro';
import Card from '@components/ui/Card.astro';
import Button from '@components/ui/Button.astro';
import { getContent } from '@content/content';

const lang = 'de';
const content = getContent(lang);
const canonical = 'https://awanar-expeditions.com/de/safety';
---

<FunnelLayout 
  title={`Sicherheit, Ethik & Logistik | ${content.meta.siteName}`}
  description="Sicherheitsprotokolle, ethische Verpflichtungen, Vorbereitungs-Checkliste und Logistik für die Amazonas-Expedition."
  canonical={canonical}
  lang={lang}
  content={content}
>
  <section class="section-padding pt-24 pb-16">
    <div class="container-narrow">
      <h1 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.safety.title}</h1>
      <p class="text-lg text-aw-sage">Dein Wohlbefinden hat Priorität.</p>
    </div>
  </section>

  <!-- Ethics -->
  <section class="section-padding py-12 bg-aw-base/5">
    <div class="container-narrow">
      <Card padding="lg" class="border-l-4 border-l-aw-sage">
        <h2 class="text-xl font-semibold text-aw-base mb-4">{content.safety.ethics.title}</h2>
        <p class="text-aw-base/80 leading-relaxed">{content.safety.ethics.statement}</p>
      </Card>
    </div>
  </section>

  <!-- Preparation -->
  <section class="section-padding py-16">
    <div class="container-narrow">
      <h2 class="text-xl font-semibold text-aw-base mb-6">{content.safety.preparation.title}</h2>
      <div class="grid sm:grid-cols-2 gap-4">
        {content.safety.preparation.items.map((item) => (
          <div class="flex items-start gap-3 p-4 bg-white/50 rounded-lg border border-aw-sage/20">
            <span class="w-5 h-5 rounded-full bg-aw-sage/20 flex items-center justify-center flex-shrink-0 mt-0.5">
              <svg class="w-3 h-3 text-aw-sage" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </span>
            <span class="text-aw-base/80">{item}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Privacy -->
  <section class="section-padding py-12 bg-aw-base/5">
    <div class="container-narrow">
      <Card padding="lg">
        <h2 class="text-xl font-semibold text-aw-base mb-4">{content.safety.privacy.title}</h2>
        <p class="text-aw-base/80 leading-relaxed">{content.safety.privacy.statement}</p>
      </Card>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding py-16">
    <div class="container-narrow text-center">
      <h2 class="text-2xl font-bold text-aw-base mb-4">Fragen?</h2>
      <p class="text-aw-sage mb-8">Wir helfen dir bei der Vorbereitung.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <Button href="/de/faq" variant="secondary" size="lg">
          FAQ lesen
        </Button>
        <Button href="/de/call" variant="primary" size="lg">
          Anruf buchen
        </Button>
      </div>
    </div>
  </section>
</FunnelLayout>
