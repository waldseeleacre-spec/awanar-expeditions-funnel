---
import FunnelLayout from '@layouts/FunnelLayout.astro';
import FAQAccordion from '@components/sections/FAQAccordion.astro';
import Button from '@components/ui/Button.astro';
import { getContent } from '@content/content';

const lang = 'es';
const content = getContent(lang);
const canonical = 'https://awanar-expeditions.com/es/faq';
---

<FunnelLayout 
  title={`FAQ | ${content.meta.siteName}`}
  description="Preguntas frecuentes sobre la expedición al Amazonas. Soporte de idioma, equipaje, pago, vuelos, proceso de reserva y ceremonias."
  canonical={canonical}
  lang={lang}
  content={content}
>
  <section class="section-padding pt-24 pb-16">
    <div class="container-narrow text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.faq.title}</h1>
      <p class="text-lg text-aw-sage">Todo lo que necesitas saber.</p>
    </div>
  </section>

  <FAQAccordion content={content.faq} />

  <!-- Still have questions -->
  <section class="section-padding py-16 bg-aw-base/5">
    <div class="container-narrow text-center">
      <h2 class="text-2xl font-bold text-aw-base mb-4">¿Aún tienes preguntas?</h2>
      <p class="text-aw-sage mb-8">Reserva una llamada de alineación gratuita. Sin compromiso.</p>
      <Button href="/es/call" variant="primary" size="lg">
        Reservar llamada
      </Button>
    </div>
  </section>
</FunnelLayout>
