---
interface Props {
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const { class: className = '', padding = 'md' } = Astro.props;

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `bg-white/50 backdrop-blur-sm rounded-xl border border-aw-sage/20 ${paddingClasses[padding]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
