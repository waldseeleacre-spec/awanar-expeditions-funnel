---
import type { Content } from '@content/content';

interface Props {
  content: Content['faq'];
}

const { content } = Astro.props;
---

<section class="section-padding py-20">
  <div class="container-narrow">
    <h2 class="text-2xl sm:text-3xl font-bold text-aw-base mb-12 text-center">{content.title}</h2>
    
    <div class="space-y-4">
      {content.items.map((item, index) => (
        <details class="group bg-white/50 rounded-lg border border-aw-sage/20 overflow-hidden">
          <summary class="flex items-center justify-between p-4 cursor-pointer hover:bg-white/80 transition-colors">
            <span class="font-medium text-aw-base pr-4">{item.question}</span>
            <span class="w-6 h-6 rounded-full bg-aw-sage/20 flex items-center justify-center flex-shrink-0 group-open:rotate-180 transition-transform">
              <svg class="w-3 h-3 text-aw-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </span>
          </summary>
          <div class="px-4 pb-4 text-aw-base/80">
            {item.answer}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
