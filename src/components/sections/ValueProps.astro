---
import Card from '@components/ui/Card.astro';
import type { Content } from '@content/content';

interface Props {
  content: Content['positioning'];
}

const { content } = Astro.props;
---

<section class="section-padding py-20">
  <div class="container-wide">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-aw-base mb-4">{content.title}</h2>
      <p class="text-lg text-aw-sage max-w-2xl mx-auto">{content.statement}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- For You -->
      <Card padding="lg" class="border-l-4 border-l-aw-sage">
        <h3 class="text-xl font-semibold text-aw-base mb-4">{content.forYou.title}</h3>
        <ul class="space-y-3">
          {content.forYou.items.map((item) => (
            <li class="flex items-start gap-3">
              <span class="w-5 h-5 rounded-full bg-aw-sage/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-3 h-3 text-aw-sage" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </span>
              <span class="text-aw-base/80">{item}</span>
            </li>
          ))}
        </ul>
      </Card>

      <!-- Not For You -->
      <Card padding="lg" class="border-l-4 border-l-aw-olive">
        <h3 class="text-xl font-semibold text-aw-base mb-4">{content.notForYou.title}</h3>
        <ul class="space-y-3">
          {content.notForYou.items.map((item) => (
            <li class="flex items-start gap-3">
              <span class="w-5 h-5 rounded-full bg-aw-olive/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-3 h-3 text-aw-olive" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </span>
              <span class="text-aw-base/80">{item}</span>
            </li>
          ))}
        </ul>
      </Card>
    </div>
  </div>
</section>
